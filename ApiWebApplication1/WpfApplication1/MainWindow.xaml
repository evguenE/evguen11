                        </Style>
                    </ComboBox.ItemContainerStyle>-->
                </ComboBox>
                <Label HorizontalAlignment="Left" Content="Свод данных по"
                          Margin="10,58,0,0" VerticalAlignment= "Top" Height="25"/>
                
                
                <ComboBox HorizontalAlignment="Left" 
                          Margin="10,81,0,0" VerticalAlignment="Top" Width="170">
                    <!--<ComboBoxItem Content="ComboBoxItem" HorizontalAlignment="Left" Width="168"/>-->
                    <ComboBoxItem>периодам</ComboBoxItem>
                    <ComboBoxItem>зонам</ComboBoxItem>
                    <ComboBox.Style>
                        <Style>
                            <Setter Property="ComboBox.IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <!--<DataTrigger Binding="{Binding ElementName = cbSelection , Path = SelectedValue.Content}" Value = "True" >
                                    <Setter  Property="ComboBox.IsEnabled" Value="true"/>
                                </DataTrigger>-->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName = cbSelection , Path = IsSelected}" Value="True"/>
                                                                            
                                    </MultiDataTrigger.Conditions>
                                    <Setter  Property="ComboBox.IsEnabled" Value="True"/>
                                </MultiDataTrigger>

                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                    
                </ComboBox>
            </Grid>
        </GroupBox>
        <GroupBox Header="Форма" HorizontalAlignment="Right" Margin="0,10,0,0"
                  VerticalAlignment="Top" Height="236" Width="660" IsEnabled="False">
            <Grid HorizontalAlignment="Left" Height="226" VerticalAlignment="Top"
