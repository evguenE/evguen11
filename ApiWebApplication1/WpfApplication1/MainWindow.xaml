                <Label Content="Введите год"
                       HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Height="25"/>
                <ComboBox HorizontalAlignment="Left" Name="cbSelection"
                          Margin="10,41,0,0" VerticalAlignment="Top" Width="170"  >
                    <ComboBoxItem>2</ComboBoxItem>
                    <ComboBoxItem>One</ComboBoxItem>
                    <ComboBoxItem>6</ComboBoxItem>
                    <ComboBoxItem>8</ComboBoxItem>
                    <ComboBoxItem>16</ComboBoxItem>

                    <!--<ComboBox.ItemContainerStyle>
                        <Style>
